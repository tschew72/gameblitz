#===============================================================================
# GameBlitz Production Environment Configuration
#===============================================================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control!
#===============================================================================

#-------------------------------------------------------------------------------
# Database Configuration
#-------------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL="postgresql://gameblitz:YOUR_SECURE_PASSWORD@localhost:5432/gameblitz?schema=public"

# PostgreSQL credentials (used by Docker)
POSTGRES_USER=gameblitz
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD
POSTGRES_DB=gameblitz

#-------------------------------------------------------------------------------
# Redis Configuration
#-------------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"

#-------------------------------------------------------------------------------
# NextAuth Configuration
#-------------------------------------------------------------------------------
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_HERE
NEXTAUTH_URL=https://your-domain.com

#-------------------------------------------------------------------------------
# Socket Server Configuration
#-------------------------------------------------------------------------------
NEXT_PUBLIC_SOCKET_URL=https://your-domain.com:3001
CORS_ORIGIN=https://your-domain.com

#-------------------------------------------------------------------------------
# Optional: External Services
#-------------------------------------------------------------------------------
# AWS S3 for image uploads (optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# Sentry error tracking (optional)
# SENTRY_DSN=

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=

#-------------------------------------------------------------------------------
# Server Configuration
#-------------------------------------------------------------------------------
NODE_ENV=production
PORT=3000
SOCKET_PORT=3001
